<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dropdown Debug Test</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  
  <style>
    body { padding-top: 100px; }
    .debug-section { margin: 20px 0; padding: 20px; border: 1px solid #ddd; }
    .dropdown-menu { z-index: 2000; }
  </style>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { user: user, isAuthenticated: isAuthenticated, currentPage: 'debug' }) %>

  <div class="container">
    <h1>Dropdown Debug Test</h1>
    
    <div class="debug-section">
      <h3>Test 1: Basic Bootstrap Dropdown</h3>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
          Basic Bootstrap Dropdown
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="#">Action</a></li>
          <li><a class="dropdown-item" href="#">Another action</a></li>
          <li><a class="dropdown-item" href="#">Something else here</a></li>
        </ul>
      </div>
    </div>

    <div class="debug-section">
      <h3>Test 2: Profile Dropdown (Same as Navbar)</h3>
      <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
          <i class="bi bi-person-circle me-2"></i>
          Test User
        </button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>Profile</a></li>
          <li><a class="dropdown-item" href="/bookings"><i class="bi bi-calendar-check me-2"></i>My Bookings</a></li>
          <li><a class="btn dropdown-item" href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
        </ul>
      </div>
    </div>

    <div class="debug-section">
      <h3>Debug Information</h3>
      <div id="debug-info">
        <p>Bootstrap loaded: <span id="bootstrap-status">Checking...</span></p>
        <p>Dropdown toggles found: <span id="toggle-count">Checking...</span></p>
        <p>Console logs: Check browser console for detailed logs</p>
      </div>
    </div>
  </div>

  <!-- Bootstrap JavaScript Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Check Bootstrap status
      const bootstrapStatus = document.getElementById('bootstrap-status');
      const toggleCount = document.getElementById('toggle-count');
      
      if (window.bootstrap) {
        bootstrapStatus.textContent = '✅ Yes';
        bootstrapStatus.style.color = 'green';
      } else {
        bootstrapStatus.textContent = '❌ No';
        bootstrapStatus.style.color = 'red';
      }
      
      // Count dropdown toggles
      const toggles = document.querySelectorAll('[data-bs-toggle="dropdown"]');
      toggleCount.textContent = toggles.length;
      
      // Add click listeners for debugging
      toggles.forEach((toggle, index) => {
        toggle.addEventListener('click', function(e) {
          console.log(`Dropdown ${index + 1} clicked:`, {
            element: this,
            bootstrapAvailable: !!window.bootstrap,
            event: e
          });
        });
      });
    });
  </script>
</body>
</html>
