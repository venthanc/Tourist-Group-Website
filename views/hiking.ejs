                                <p class="text-muted mb-2 small">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                            <%= trail.location %>
                                </p>
                                <div class="mb-3">
                                            <span class="stars">
                                                <% for (let i = 1; i <= 5; i++) { %>
                                                    <% if (i <= trail.stars) { %>â˜…<% } else { %>â˜†<% } %>
                                                <% } %>
                                            </span>
